<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/PlayerCard3"
        style="@style/CardStyle"
        android:visibility="visible"

        app:layout_constraintDimensionRatio="2:3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/PlayerCard3_Headline"
            style="@style/CardHeadlineText"
            android:text="@string/placeholder"

            app:layout_constraintHeight_percent="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/PlayerCard3_Picture"
            style="@style/CardPicture"
            android:src="@drawable/placeholder"

            app:layout_constraintHeight_percent="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/PlayerCard3_Headline"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/PlayerCard3_RedGem"
            style="@style/CardGemText"
            android:background="@drawable/redgem"
            android:text="@string/placeholder"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"
            app:layout_constraintWidth_percent="0.2" />

        <TextView
            android:id="@+id/PlayerCard3_BlueGem"
            style="@style/CardGemText"
            android:background="@drawable/bluegem"
            android:text="@string/placeholder"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintHeight_percent="0.23"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6"/>

        <ImageView
            android:id="@+id/PlayerCard3_Lore"
            style="@style/CardLore"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.33"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/PlayerCard3_Cost"
            style="@style/CardCost"
            android:text="@string/placeholder"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toStartOf="@id/PlayerCard3_Description"
            app:layout_constraintTop_toTopOf="@id/PlayerCard3_Lore"
            app:layout_constraintWidth_percent="0.19"/>

        <TextView
            android:id="@+id/PlayerCard3_Description"
            style="@style/CardDescriptionText"
            android:text="@string/placeholder"

            app:layout_constraintEnd_toStartOf="@id/PlayerCard3_BlueGem"
            app:layout_constraintHeight_percent="0.13"
            app:layout_constraintTop_toTopOf="@id/PlayerCard3_Lore"
            app:layout_constraintWidth_percent="0.4" />

        <TextView
            android:id="@+id/PlayerCard3_LoreText"
            style="@style/CardLoreText"
            android:text="@string/placeholder"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.22"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/PlayerCard3_Effect1"
            style="@style/CardEffect"
            android:background="@drawable/placeholder"

            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/PlayerCard3_Effect2"
            style="@style/CardEffect"
            android:background="@drawable/placeholder"

            app:layout_constraintWidth_percent="0.18"
            app:layout_constraintHeight_percent="0.12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/PlayerCard3_Quirk1"
            style="@style/CardQuirk"
            android:text="@string/placeholder"

            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.065"
            app:layout_constraintStart_toStartOf="@id/PlayerCard3_RedGem"
            app:layout_constraintEnd_toEndOf="@id/PlayerCard3_BlueGem"
            app:layout_constraintBottom_toTopOf="@id/PlayerCard3_Lore">
        </TextView>

        <TextView
            android:id="@+id/PlayerCard3_Quirk2"
            style="@style/CardQuirk"
            android:text="@string/placeholder"

            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.065"
            app:layout_constraintStart_toStartOf="@id/PlayerCard3_RedGem"
            app:layout_constraintEnd_toEndOf="@id/PlayerCard3_BlueGem"
            app:layout_constraintTop_toBottomOf="@id/PlayerCard3_Picture">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>